#include <stdio.h>
main()
{
int menu;
printf ("masukkan pilihan : \n\n");
printf ("1. Index 3 terletak di inex ke berapa\n\n");
printf ("2. Urutan menggunakan seleksi minimal\n\n");
printf ("pilihan anda :");
scanf ("%d",&menu);
switch (menu)
case 1:{
int i, j, x=3, y, a[2][5]={4, 5, 8, 1, 2,
3, 11, 23, 10, 13};
printf("\nMencari index bilangan 3 pada matrix A[2][5]\n\n\n4 5 8 1 2 \n\n3 11 23 10 13\n\n");
for(i=0; i<2; i++)
{
for(j=0; j<5; j++)
{
y = a[i][j];
if(a[i][j]==x)
{
printf("\n\nBilangan 3 ditemukan pada index [%d][%d]\n", i, j, a[i][j]);
break;
}
case 2 : {
int i, j, l, r, min, y, a[2][5]={4, 5, 8, 1, 2,
3, 11, 23, 10, 13};
printf("\nMengurutkan matriks A[2][5]\n\n4\t5\t8\t1\t2\n3\t11\t23\t10\t13\n\n\n dari nilai terkecil\n\n\n");
for(i=0; i<2; i++)
{
for(j=0; j<5; j++)
{
min = a[0][0];
if(a[i][j]>min)
{
min = a[i][j];
l = i;
r = j;
}
printf("%d\t", min);
}
y = a[i][j];
a[i][j] = min;
a[l][r] = y;
printf("\n", min); break;
}
}}}}}
